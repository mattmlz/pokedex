{{ include('partials/header_logged.twig') }}
<div class="container form center-align">
  <div class="row">
    <form action="">
      <div class="input-field col s6">
        <select>
          <option value="" disabled selected>Choose the type of pokemon you search</option>
          {% for _type in types %}
            <option value="{{ _type.id }}">{{ _type.name}}</option>
          {% endfor %}
        </select>
        <label>Type</label>
      </div>
      <div class="col s6 valign-wrapper">
          <button class="btn waves-effect waves-light" type="submit" name="action">Search
            <i class="material-icons right">search</i>
          </button>
      </div>
    </form>
  </div>  

  <div class="row">
    {% for _pokemon in pokemons %}
      <div class="col s3">
        <div class="card">
          <div class="card-image">
            <img src="{{ base_url() }}/assets/pictures/{{ _pokemon.ppicture }}">
          </div>
          <div class="card-content">
            <h5>{{ _pokemon.pname }}</h5>
            <p>Height: {{ _pokemon.pheight }}</p>
            <p>Weight: {{ _pokemon.pweight }}</p>
            <p>Type: {{ _pokemon.tname }}</p>
          </div>
          <div class="card-action">
            <label>
              <input type="checkbox" class="indeterminate-checkbox" {# checked #} />
              <span>Check if you love him</span>
            </label>
          </div>
        </div>
      </div>
    {% endfor %}
  </div>

</div>

{{ include('partials/footer.twig') }}