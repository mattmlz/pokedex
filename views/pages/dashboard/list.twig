{{ include('partials/header_logged.twig') }}

<div class="container form center-align">
  <div class="row">
    <form method="get" id="select-type">
      <div class="col s12">
        <label>
          <input class="with-gap" name="type" type="radio" value ="0"/>
          <span>All</span>
        </label>
        {% for _type in types %}
          <label>
            <input class="with-gap" name="type" type="radio" value ="{{ _type.id }}"/>
            <span>{{ _type.name}}</span>
          </label>
        {% endfor %}
      </div>
      <div class="col s12 center-align">
        <button class="btn waves-effect waves-light" type="submit">Search
          <i class="material-icons right">search</i>
        </button>
      </div>
    </form>
  </div>  

  <div class="row">
    <form method="get" id="liked"></form>
      {% for _pokemon in pokemons %}
        <div class="col s3">
          <div class="card">
            <div class="card-image">
              <img src="{{ base_url() }}/assets/pictures/{{ _pokemon.ppicture }}">
            </div>
            <div class="card-content">
              <h5>{{ _pokemon.pname }}</h5>
              <p>Height: {{ _pokemon.pheight }}</p>
              <p>Weight: {{ _pokemon.pweight }}</p>
              <p>Type: {{ _pokemon.tname }}</p>
            </div>
            <div class="card-action">
              <label>
                <input type="checkbox" name="like" class="indeterminate-checkbox" {# checked #} />
                <span>Check if you love him</span>
              </label>
            </div>
          </div>
        </div>
      {% endfor %}
      <div class="fixed-action-btn">
        <button class="btn-floating btn-large red" type="submit"><i class="large material-icons">playlist_add</i></button>
      </div>
    </form>
  </div>
</div>

{{ include('partials/footer.twig') }}