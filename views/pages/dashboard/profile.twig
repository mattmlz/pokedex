{{ include('partials/header_logged.twig') }}
<div class="container form center-align">
  <div class="row">
    <div class="col s12"><h1>Welcome {{ user.first_name }}!</h1></div>
  </div>
  <div class="row">
    <h5>Your ❤️ pokemons:</h5>
    <p>If you want to change your list, click <a href="{{ path_for('list') }}">here</a></p>
  </div>

  <div class="row">
    {% for _pokemon in pokemons %}
      <div class="col s4">
        <div class="card">
          <div class="card-image">
            <img src="{{ base_url() }}/assets/pictures/{{ _pokemon.ppicture }}">
            <span class="card-title">{{ _pokemon.pname }}</span>
          </div>
          <div class="card-content">
            <p>{{ _pokemon.pname }}</p>
            <p>Height: {{ _pokemon.pheight }}</p>
            <p>Weight: {{ _pokemon.pweight }}</p>
          </div>
        </div>
      </div>
    {% endfor %}
  </div>
  
</div>
{{ include('partials/footer.twig') }}